<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.dangercloz.BO.BO_FR_PocketAdd"
    android:clickable="true">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha="0.9"></RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50px"
        android:layout_marginTop="70px"
        android:layout_marginRight="50px"
        android:layout_marginBottom="70px"
        android:background="@drawable/round_corner">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:background="@drawable/round_corner_top">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_create_close"
                android:src="@drawable/close_off"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:layout_marginLeft="30px"
                android:scaleType="fitCenter"
                android:maxHeight="60px"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="스와치박스 만들기"
                android:id="@+id/textView"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="30px" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_create_confirm"
                android:src="@drawable/check_off"
                android:background="@android:color/transparent"
                android:adjustViewBounds="true"
                android:layout_marginRight="30px"
                android:scaleType="fitCenter"
                android:maxHeight="60px"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:background="#202323"></FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="#373737"
            android:baselineAligned="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="이름"
                android:id="@+id/textView4"
                android:gravity="center"
                android:layout_marginLeft="50px"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginRight="50px" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pocket_name_field"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:layout_marginRight="50px"
                android:textColor="#FFFFFF"
                android:autoText="false"
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:background="@android:drawable/editbox_dropdown_dark_frame" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="#373737">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="설명"
                android:id="@+id/textView5"
                android:gravity="center"
                android:layout_marginLeft="50px"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginRight="50px" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pocket_desc_field"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:layout_marginRight="50px"
                android:textColor="#FFFFFF"
                android:autoText="false"
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:background="@android:drawable/editbox_dropdown_dark_frame" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:background="#202323" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="#373737">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="공유자"
                android:id="@+id/textView6"
                android:gravity="center"
                android:layout_marginLeft="50px"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginRight="50px" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:background="#202323" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="#373737">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="비밀 설정"
                android:id="@+id/textView7"
                android:gravity="center"
                android:layout_marginLeft="50px"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginRight="50px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_secrete"
                android:src="@drawable/btn_off"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxHeight="70px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="200px" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:background="#202323" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="#373737">

            <FrameLayout
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="50px"
                android:layout_marginRight="20px"
                android:background="@drawable/round_corner"
                android:id="@+id/background_color"></FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="커버 선택"
                android:id="@+id/textView15"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView8"
                android:src="@drawable/side"
                android:scaleType="fitCenter"
                android:maxHeight="50px"
                android:adjustViewBounds="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="240px" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
