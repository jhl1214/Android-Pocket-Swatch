<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dangercloz.BO.BO_AC_Main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgruound"
            android:layout_marginTop="113px">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView"
                android:layout_marginTop="90px"
                android:layout_marginBottom="90px">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/grid_holder">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:id="@+id/temp_margin"></FrameLayout>

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hash_search_holder">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="89px"
                    android:background="@drawable/search_background">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_tag_search"
                        android:src="@drawable/hash_tag_seach"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:maxWidth="600px"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="110px"
                    android:background="#202323"
                    android:id="@+id/tag_holder">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/horizontalScrollView2"
                        android:layout_marginRight="70px">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:id="@+id/selected_tag_bar" />
                    </HorizontalScrollView>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_close_tag"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/tag_close"
                        android:adjustViewBounds="true"
                        android:maxHeight="50px"
                        android:maxWidth="50px"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:layout_marginRight="20px" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_tag_bar">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_tag_list"
                        android:src="@drawable/arrow_down"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#373737">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_menu_board"
                android:src="@drawable/board_on"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:maxHeight="113px"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_menu_search"
                android:background="@android:color/transparent"
                android:src="@drawable/searching_off"
                android:layout_weight="1"
                android:maxHeight="113px"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_menu_mine"
                android:background="@android:color/transparent"
                android:src="@drawable/mine_off"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:maxHeight="113px"
                android:adjustViewBounds="true" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_menu_ddm"
                android:background="@android:color/transparent"
                android:src="@drawable/at_ddm_off"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:maxHeight="113px" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:clickable="false"
            android:id="@+id/count_frame">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:maxHeight="250px"
                android:maxWidth="250px"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/count_background"
                android:layout_centerInParent="true"
                android:layout_marginTop="120px"
                android:alpha="0.5" />

            <TextView
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/count_text"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="110px"
                android:textSize="70px"
                android:gravity="center"
                android:textColor="#373737" />

        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mini_pocket"
            android:src="@drawable/pocket_card2"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="95px" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:layout_marginBottom="120px"
            android:id="@+id/mini_pocket_touch"></FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POCKET"
            android:id="@+id/current_pocket_name"
            android:layout_marginBottom="125px"
            android:layout_alignParentBottom="true"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="35px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/current_pocket_count"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="125px"
            android:textColor="#696969"
            android:paddingLeft="540px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/pocket_layout"></RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/pocket_sub_layout" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/add_layout" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/mypocket"
                android:adjustViewBounds="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_pocket_all"
                android:background="@android:color/transparent"
                android:src="@drawable/see_all_off"
                android:adjustViewBounds="true"
                android:maxHeight="50px"
                android:maxWidth="50px"
                android:layout_alignParentBottom="false"
                android:layout_alignBottom="@+id/imageView"
                android:scaleType="fitCenter"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_pocket_add"
                android:maxHeight="50px"
                android:maxWidth="50px"
                android:src="@drawable/plus_off"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignRight="@+id/imageView"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_layout"
            android:layout_alignParentTop="true"
            android:layout_marginTop="113px"></RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pocket_detail"
            android:layout_alignParentTop="true"
            android:layout_marginTop="113px" />

    </RelativeLayout>

</RelativeLayout>
